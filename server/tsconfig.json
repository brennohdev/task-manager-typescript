{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["node"], // apenas os tipos usados em produção
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/@types"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "src/__tests__"]
}
